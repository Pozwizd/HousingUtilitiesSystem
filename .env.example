# ============================================================================
# Environment Variables Template
# Copy this file to .env and fill in your values
# DO NOT commit .env to git - it contains secrets!
# ============================================================================

# =========================
# Google OAuth Configuration
# =========================
OAUTH_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
OAUTH_GOOGLE_CLIENT_SECRET=your-google-client-secret

# =========================
# JWT Configuration
# =========================
# Generate with: openssl rand -hex 32
JWT_SECRET=your-64-character-hex-secret-key-here

# =========================
# MongoDB Configuration
# =========================
# For local dev with replica set:
MONGODB_URI=mongodb://mongo1:27017,mongo2:27018,mongo3:27019/HousingUtilitiesSystemDB?replicaSet=rs0

MONGODB_DATABASE=HousingUtilitiesSystemDB

# =========================
# Elasticsearch
# =========================
ELASTICSEARCH_URIS=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# =========================
# Redis
# =========================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# =========================
# Email - Gmail SMTP
# =========================
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# =========================
# SendGrid
# =========================
SENDGRID_API_KEY=SG.your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@yourapp.com